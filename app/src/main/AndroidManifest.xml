<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.unice.polytech.ccexpert">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CCExpertMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.DungeonsActivity" />
        <activity android:name=".controller.activity.BaseActivity" />
        <activity android:name=".controller.activity.DungeonActivity" />
        <activity android:name=".controller.activity.GuildWarActivity" />
        <activity android:name=".controller.activity.HeroesActivity" />
        <activity android:name=".controller.activity.HeroActivity" />
        <activity android:name=".controller.activity.ShardActivity" />
        <activity android:name=".controller.activity.CrystalActivity" />
        <activity android:name=".controller.activity.AetherockActivity" />
        <activity android:name=".controller.activity.AccuracyActivity" />
        <activity android:name=".controller.activity.AttackSpeedActivity" />
        <activity android:name=".controller.activity.DodgeActivity" />
    </application>

</manifest>