<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/protector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/protectorSpinnerText"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <NumberPicker
                    android:id="@+id/currentLvl"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:theme="@style/AppTheme.Picker" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/spinnerText2"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <NumberPicker
                    android:id="@+id/aimLvl"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:theme="@style/AppTheme.Picker" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/destinyText"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rectangle_corners"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/merits"/>

                <TextView
                    android:id="@+id/meritAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/birthrock"
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"/>

                <TextView
                    android:id="@+id/birthrockAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="@string/protectorText"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/rectangle_corners"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_attack"/>

                <TextView
                    android:id="@+id/attackAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_hp"/>

                <TextView
                    android:id="@+id/hpAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_dodge"/>

                <TextView
                    android:id="@+id/dodgeAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_roquet"/>

                <TextView
                    android:id="@+id/accuracyAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_tenacity"/>

                <TextView
                    android:id="@+id/tenacityAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_crit"/>

                <TextView
                    android:id="@+id/critAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/destiny_pic_size"
                    android:layout_height="@dimen/destiny_pic_size"
                    android:layout_marginEnd="@dimen/destiny_pic_size"
                    android:src="@drawable/ico_hit"/>

                <TextView
                    android:id="@+id/dmgAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/zero" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>