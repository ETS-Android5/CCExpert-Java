<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dungeons"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dungeonsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="26sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:text="SÃ©lectionner un donjon"/>

    <LinearLayout
        android:id="@+id/layoutPickers"
        android:layout_below="@id/dungeonsTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/donjons" />

            <NumberPicker
                android:id="@+id/door"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:theme="@style/AppTheme.Picker"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/dungeon_logo" />

            <NumberPicker
                android:id="@+id/base"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:theme="@style/AppTheme.Picker"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/dungeonsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@color/secondaryLightColor"
        android:layout_marginHorizontal="5dp"
        android:text="Valider"
        android:layout_below="@id/layoutPickers"/>

</RelativeLayout>